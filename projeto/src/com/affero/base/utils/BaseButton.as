package com.affero.base.utils {		/**	 * @author luiz.coelho	 */		import com.greensock.*;	import com.greensock.easing.*;	import flash.display.*;	import flash.events.*;	import flash.text.TextField;		public class BaseButton extends MovieClipExtended {				private var labelsDispArr:Array = new Array();		public var clicked:Boolean = false;				public var label:TextField;				//Função construtora		public function BaseButton() {			super(this);			this.stop();			for (var i:int; i < this.currentLabels.length; i++) {				var labelName:String = this.currentLabels[i].name;				labelsDispArr.push(labelName)							}										init();					}							private function init():void {			this.buttonMode = true;									if (labelsDispArr.indexOf("UP") != -1) {			    this.addEventListener(MouseEvent.ROLL_OUT, mouseEvents);			}			if (labelsDispArr.indexOf("OVER") != -1) {				this.addEventListener(MouseEvent.ROLL_OVER, mouseEvents);			}						}				//**Mouse Events (click, rollOver e rooOut)		private function mouseEvents(evt:MouseEvent):void{						evt.currentTarget.mouseChildren = false;						switch (evt.type){								case "rollOver":				 if(this.currentLabel != "BLINK"){ 					this.gotoAndStop("OVER");								 }				break;								case "rollOut":				if(this.currentLabel != "BLINK"){				  this.gotoAndStop("UP");				}				break;								}				}				} //end class} //end package